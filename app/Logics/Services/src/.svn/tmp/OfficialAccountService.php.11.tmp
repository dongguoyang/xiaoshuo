    private function operateText($message) {
        // æ–‡æœ¬æ¶ˆæ¯å¤„ç†å™¨
        $appid = request()->input('appid');
        if ($message['Content'] == 'ç­¾åˆ°') {
            $msg = $this->signReply($message); // ç­¾åˆ°è¿”è¿˜
            if ($msg) {
                return $msg;
            }
