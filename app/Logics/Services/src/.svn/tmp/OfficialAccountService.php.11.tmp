        $keyword_info = $this->wechatMsgReplies->KeyWordMsg($appid, $message['Content']);
        if (!$keyword_info) {
            // throw new \Exception('æ²¡æœ‰æŸ¥è¯¢åˆ°å¯¹åº”çš„å…³é”®å­—ï¼', 2000);
